<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Sistema de Asistencia' %></title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
    <% if (typeof cssFile !== 'undefined' && cssFile) { %>
    <link rel="stylesheet" href="/css/<%= cssFile %>">
    <% } %>
</head>
<body>
    <nav class="navbar">
        <h1><i class="fas fa-tachometer-alt"></i> Panel de Control</h1>
        <div class="user-info">
            <span id="userName">Usuario: Administrador</span>
            <button class="logout-btn" onclick="logout()">
                <i class="fas fa-sign-out-alt"></i> Cerrar Sesi√≥n
            </button>
        </div>
    </nav>

    <div class="container">
        <div id="alerts"></div>
        
        <div class="tabs">
            <a href="/admin/usuarios" class="tab <%= currentPage === 'usuarios' ? 'active' : '' %>">
                <i class="fas fa-users"></i> Usuarios del Sistema
            </a>
            <a href="/admin/carreras" class="tab <%= currentPage === 'carreras' ? 'active' : '' %>">
                <i class="fas fa-graduation-cap"></i> Carreras
            </a>
            <a href="/admin/semestres" class="tab <%= currentPage === 'semestres' ? 'active' : '' %>">
                <i class="fas fa-calendar-alt"></i> Semestres
            </a>
            <a href="/admin/materias" class="tab <%= currentPage === 'materias' ? 'active' : '' %>">
                <i class="fas fa-book"></i> Materias y Plan
            </a>
            <a href="/admin/grupos" class="tab <%= currentPage === 'grupos' ? 'active' : '' %>">
                <i class="fas fa-layer-group"></i> Grupos
            </a>
            <a href="/admin/alumnos" class="tab <%= currentPage === 'alumnos' ? 'active' : '' %>">
                <i class="fas fa-user-graduate"></i> Alumnos
            </a>
            <a href="/admin/asignaciones" class="tab <%= currentPage === 'asignaciones' ? 'active' : '' %>">
                <i class="fas fa-tasks"></i> Asignaciones
            </a>
            <a href="/admin/visualizar" class="tab <%= currentPage === 'visualizar' ? 'active' : '' %>">
                <i class="fas fa-chart-bar"></i> Visualizar Datos
            </a>
        </div>
